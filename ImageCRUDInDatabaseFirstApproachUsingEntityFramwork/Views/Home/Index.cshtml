@model IEnumerable<ImageCRUDInDatabaseFirstApproachUsingEntityFramwork.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{
    if (TempData["Message"] != null)
    {
        <div class="alert alert-success" role="alert">
            <p>@TempData["Message"]</p>
        </div>
    }
}

<p>
    @Html.ActionLink("Create New", "Create","", new { @class = "btn btn-info" })
</p>
<table class="table table-bordered text-center">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.image_path)
        </th>
        <th class="text-center">Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                <img src="@Url.Content(item.image_path)" width="100" height="80" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
